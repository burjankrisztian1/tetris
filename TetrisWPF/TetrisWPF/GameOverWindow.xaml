<Window x:Class="TetrisWPF.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Játék Vége" Height="333" Width="436" WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30" Foreground="White" BorderThickness="2" BorderBrush="Orange" ResizeMode="NoResize">
    <Grid>
        <Border BorderBrush="Orange" BorderThickness="2" CornerRadius="0" Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="Játék vége!" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="{Binding ScoreText}" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding LevelText}" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding LinesText}" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <Button Content="OK" Width="100" Height="40" Click="OkButton_Click" HorizontalAlignment="Center"
                        Background="Orange" Foreground="White" FontWeight="Bold" BorderBrush="White" BorderThickness="1"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>