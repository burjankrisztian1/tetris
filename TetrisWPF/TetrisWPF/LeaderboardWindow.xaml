<Window x:Class="TetrisWPF.LeaderboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Toplista" Height="400" Width="300" WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30" Foreground="White" BorderThickness="2" BorderBrush="Orange">
    <Grid>
        <Border BorderBrush="Orange" BorderThickness="2" CornerRadius="10" Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="TOPLISTA" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <ListBox x:Name="HighScoresList" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="16"/>
                <Button Content="OK" Width="100" Height="40" Click="OkButton_Click" HorizontalAlignment="Center"
                        Background="Orange" Foreground="White" FontWeight="Bold" BorderBrush="White" BorderThickness="1" Margin="20,10,20,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>